{
  "name": "relate-with-me",
  "version": "1.0.0",
  "main": "starter.js",
  "author": "Sam Galizia",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgalizia/relate-with-me"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev-start": "NODE_ENV=development nodemon index.js",
    "start": "yarn create-docs && node index.js",
    "clean": "./clean.sh",
    "test": "nyc --reporter=text-summary mocha --timeout 120000 --exit && yarn report",
    "remote-test": "mocha --reporter min --timeout 120000 --exit",
    "report": "nyc report --reporter=html",
    "create-docs": "jsdoc -c conf.json -d ./public/",
    "open-docs": "open './out/index.html'"
  },
  "dependencies": {
    "bcrypt": "^3.0.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.1",
    "mongoose": "^5.2.6",
    "morgan": "^1.9.0",
    "validator": "^10.7.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "mockgoose": "^7.3.5",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2"
  },
  "nodemonConfig": {
    "events": {
      "restart": "yarn create-docs"
    },
    "ignore": ["./public"]
  }
}
